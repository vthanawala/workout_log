<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All lifts
    </h1>

    <a href="/lifts/new" class="btn btn-block btn-outline-secondary">
      Add a new lift
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Workout
        </th>

        <th>
          Body part
        </th>

        <th>
          Comments
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @lifts.each do |lift| %>
      <tr>
        <!-- Display lift.id start -->
        <td>
          <%= lift.id %>
        </td>
        <!-- Display lift.id end -->

        <!-- Display lift.workout_id start -->
        <td>
          <%= lift.workout_id %>
        </td>
        <!-- Display lift.workout_id end -->

        <!-- Display lift.body_part start -->
        <td>
          <%= lift.body_part %>
        </td>
        <!-- Display lift.body_part end -->

        <!-- Display lift.comments start -->
        <td>
          <%= lift.comments %>
        </td>
        <!-- Display lift.comments end -->

        <!-- Display lift.created_at start -->
        <td>
          <%= time_ago_in_words(lift.created_at) %> ago
        </td>
        <!-- Display lift.created_at end -->

        <!-- Display lift.updated_at start -->
        <td>
          <%= time_ago_in_words(lift.updated_at) %> ago
        </td>
        <!-- Display lift.updated_at end -->

        <td>
          <a href="/lifts/<%= lift.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
