<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All lifts
    </h1>

    <a href="/lifts/new" class="btn btn-block btn-outline-secondary">
      Add a new lift
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "lift_templates/lifts_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Workout
        </th>

        <th>
          Body part
        </th>

        <th>
          Comments
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @lifts.each do |lift| %>
      <tr>
        <td>
          <%= lift.id %>
        </td>

        <td>
          <% if lift.workout.present? %>
            <a href="/workouts/<%= lift.workout.id %>">
              <%= lift.workout.user_id %>
            </a>
          <% end %>
        </td>

        <td>
          <%= lift.body_part %>
        </td>

        <td>
          <%= lift.comments %>
        </td>

        <td>
          <%= time_ago_in_words(lift.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(lift.updated_at) %> ago
        </td>

        <td>
          <a href="/lifts/<%= lift.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @lifts, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
