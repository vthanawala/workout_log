<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Lift #<%= @lift.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/lifts" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/lifts/<%= @lift.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit lift
        </a>
      </div>

      <div class="col">
        <a href="/delete_lift/<%= @lift.id %>" class="btn btn-block btn-outline-secondary">
          Delete lift
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Workout
      </dt>
      <dd>
        <% if @lift.workout.present? %>
          <a href="/workouts/<%= @lift.workout_id %>">
            <%= @lift.workout.user_id %>
          </a>
        <% end %>
      </dd>

      <dt>
        Body part
      </dt>
      <dd>
        <%= @lift.body_part %>
      </dd>

      <dt>
        Comments
      </dt>
      <dd>
        <%= @lift.comments %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@lift.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@lift.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

