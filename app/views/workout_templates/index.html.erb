<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All workouts
    </h1>

    <a href="/workouts/new" class="btn btn-block btn-outline-secondary">
      Add a new workout
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "workout_templates/workouts_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Date
        </th>

        <th>
          Category
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @workouts.each do |workout| %>
      <tr>
        <td>
          <%= workout.id %>
        </td>

        <td>
          <% if workout.user.present? %>
            <a href="/users/<%= workout.user.id %>">
              <%= workout.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= workout.date %>
        </td>

        <td>
          <%= workout.category %>
        </td>

        <td>
          <%= time_ago_in_words(workout.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(workout.updated_at) %> ago
        </td>

        <td>
          <a href="/workouts/<%= workout.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @workouts, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
