<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All workouts
    </h1>

    <a href="/workouts/new" class="btn btn-block btn-outline-secondary">
      Add a new workout
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Date
        </th>

        <th>
          Category
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @workouts.each do |workout| %>
      <tr>
        <!-- Display workout.id start -->
        <td>
          <%= workout.id %>
        </td>
        <!-- Display workout.id end -->

        <!-- Display workout.user_id start -->
        <td>
          <% if workout.user.present? %>
            <a href="/users/<%= workout.user.id %>">
              <%= workout.user.email %>
            </a>
          <% end %>
        </td>
        <!-- Display workout.user_id end -->

        <!-- Display workout.date start -->
        <td>
          <%= workout.date %>
        </td>
        <!-- Display workout.date end -->

        <!-- Display workout.category start -->
        <td>
          <%= workout.category %>
        </td>
        <!-- Display workout.category end -->

        <!-- Display workout.created_at start -->
        <td>
          <%= time_ago_in_words(workout.created_at) %> ago
        </td>
        <!-- Display workout.created_at end -->

        <!-- Display workout.updated_at start -->
        <td>
          <%= time_ago_in_words(workout.updated_at) %> ago
        </td>
        <!-- Display workout.updated_at end -->

        <td>
          <a href="/workouts/<%= workout.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @workouts, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
