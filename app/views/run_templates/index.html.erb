<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All runs
    </h1>

    <a href="/runs/new" class="btn btn-block btn-outline-secondary">
      Add a new run
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "run_templates/runs_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Workout
        </th>

        <th>
          Distance
        </th>

        <th>
          Time
        </th>

        <th>
          Comments
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @runs.each do |run| %>
      <tr>
        <td>
          <%= run.id %>
        </td>

        <td>
          <% if run.workout.present? %>
            <a href="/workouts/<%= run.workout.id %>">
              <%= run.workout.user_id %>
            </a>
          <% end %>
        </td>

        <td>
          <%= run.distance %>
        </td>

        <td>
          <%= run.time %>
        </td>

        <td>
          <%= run.comments %>
        </td>

        <td>
          <%= time_ago_in_words(run.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(run.updated_at) %> ago
        </td>

        <td>
          <a href="/runs/<%= run.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @runs, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
