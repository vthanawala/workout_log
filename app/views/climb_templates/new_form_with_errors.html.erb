<% if @climb.present? %>
  <% if @climb.errors.any? %>
    <% @climb.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new climb
</h1>


<hr>

<form action="/create_climb" method="post">

  <div class="form-group">
    <label for="workout_id">
      Workout
    </label>

    <%= select_tag(:workout_id, options_from_collection_for_select(Workout.all, :id, :user_id, @climb.workout_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="routes">
      Routes
    </label>

    <input type="text" id="routes" name="routes" class="form-control" value="<%= @climb.routes %>">
  </div>

  <div class="form-group">
    <label for="comments">
      Comments
    </label>

    <input type="text" id="comments" name="comments" class="form-control" value="<%= @climb.comments %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create climb
  </button>
</form>

<hr>

<a href="/climbs">
  Go back
</a>
