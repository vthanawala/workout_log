<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All climbs
    </h1>

    <a href="/climbs/new" class="btn btn-block btn-outline-secondary">
      Add a new climb
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Workout
        </th>

        <th>
          Routes
        </th>

        <th>
          Comments
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @climbs.each do |climb| %>
      <tr>
        <!-- Display climb.id start -->
        <td>
          <%= climb.id %>
        </td>
        <!-- Display climb.id end -->

        <!-- Display climb.workout_id start -->
        <td>
          <%= climb.workout_id %>
        </td>
        <!-- Display climb.workout_id end -->

        <!-- Display climb.routes start -->
        <td>
          <%= climb.routes %>
        </td>
        <!-- Display climb.routes end -->

        <!-- Display climb.comments start -->
        <td>
          <%= climb.comments %>
        </td>
        <!-- Display climb.comments end -->

        <!-- Display climb.created_at start -->
        <td>
          <%= time_ago_in_words(climb.created_at) %> ago
        </td>
        <!-- Display climb.created_at end -->

        <!-- Display climb.updated_at start -->
        <td>
          <%= time_ago_in_words(climb.updated_at) %> ago
        </td>
        <!-- Display climb.updated_at end -->

        <td>
          <a href="/climbs/<%= climb.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
